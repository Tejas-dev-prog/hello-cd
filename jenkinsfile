pipeline {
    agent any

    stages {

        stage('Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/Tejas-dev-prog/hello-cd.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat 'docker build -t hello-cd:latest .'
            }
        }

        stage('Run Container') {
            steps {
                bat 'docker stop hello-cd-container || exit 0'
                bat 'docker rm hello-cd-container || exit 0'
                bat 'docker run -d -p 3000:3000 --name hello-cd-container hello-cd:latest'
            }
        }
    }
}
